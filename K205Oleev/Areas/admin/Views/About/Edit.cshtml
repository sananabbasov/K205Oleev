@model EditVM


@{
    var count = 1;
}


@*@for (var i = 0; i < Model.AboutLanguages.Count; i++)
    {
    <h1>@Model.AboutLanguages[i].Title</h1>
    }*@
<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="AboutID" value="@Model.About.ID" />
    <div class="row">
        <div class="col-lg-8">
            <div class="card p-4">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-1" type="button" role="tab" aria-controls="home" aria-selected="true">Az</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#home-2" type="button" role="tab" aria-controls="profile" aria-selected="false">Ru</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#home-3" type="button" role="tab" aria-controls="contact" aria-selected="false">En</button>
                    </li>
                </ul>





                <div class="tab-content" id="#home-@count">
                    @foreach (var item in Model.AboutLanguages)
                    {

                        <div class="tab-pane fade @(count == 1 ? "show active" : null)" id="home-@count" role="tabpanel" aria-labelledby="home-tab">
                            <p>Title</p>
                            <input class="form-control mb-2" name="Title" value="@item.Title" />
                            <p>Description</p>
                            <textarea id="editor-@count" class="form-control mb-2" name="Description">@item.Description</textarea>
                            <input type="hidden" name="LangCode" value="@item.LangCode" />
                            <input type="hidden" name="LangID" value="@item.ID" />

                        </div>


                        count++;
                    }

                </div>

            </div>

        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <img src="@Model.About.PhotoURL" class="img-fluid" />
                </div>
            </div>

            <div class="card p-3 mt-3">
                <input type="file" name="Image" />
            </div>

            <div class="card p-3 mt-3">
                <input class="btn btn-primary" type="submit" value="Edit" />
            </div>
        </div>
    </div>


</form>







<script>
    ClassicEditor
        .create( document.querySelector('#editor-1') )

    ClassicEditor
        .create( document.querySelector('#editor-2') )

    ClassicEditor
        .create( document.querySelector('#editor-3') )
</script>




