@model EditVM






<ul class="nav nav-tabs mb-2" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home_1" type="button" role="tab" aria-controls="home_1" aria-selected="true">Azərbaycan dili</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#home_2" type="button" role="tab" aria-controls="home_2" aria-selected="false">Rus dili</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#home_3" type="button" role="tab" aria-controls="home_3" aria-selected="false">İngilis dili</button>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    @{
        var count = 1;
    }
    @foreach (var item in Model.AboutLanguages)
    {

        <div class="tab-pane fade @{
        @(count == 1 ? "show " : null)
} active" id="home_@count" role="tabpanel" aria-labelledby="home-tab">
            <p>Title</p>
            <input class="form-control mb-2" name="Title" value="@item.Title" />
            <p>Description</p>
            <textarea id="editor1" class="form-control mb-2" name="Description">@item.Description</textarea>
        </div>
        count++;
    }

</div>





<ul class="nav nav-tabs" id="myTab" role="tablist">
