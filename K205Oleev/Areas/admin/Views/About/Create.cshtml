@model AboutLanguage


<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <form method="post">


                <ul class="nav nav-tabs mb-2" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Azərbaycan dili</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Rus dili</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">İngilis dili</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <p>Title</p>
                        <input class="form-control mb-2" name="Title" />
                        <p>Description</p>
                        <textarea id="editor1" class="form-control mb-2" name="Description"></textarea>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <p>Title</p>
                        <input class="form-control mb-2" name="Title" />
                        <p>Description</p>
                        <textarea id="editor2" class="form-control mb-2" name="Description"></textarea>
                    </div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                        <p>Title</p>
                        <input class="form-control mb-2" name="Title" />
                        <p>Description</p>
                        <textarea id="editor3" class="form-control mb-2" name="Description"></textarea>
                    </div>
                </div>

                <script>
                    ClassicEditor
                        .create( document.querySelector('#editor1') )

                    ClassicEditor
                        .create( document.querySelector('#editor2') )

                    ClassicEditor
                        .create( document.querySelector('#editor3') )
                </script>

                <input type="hidden" class="form-control mb-2" name="LangCode" value="AZ" />
                <input type="hidden" class="form-control mb-2" name="LangCode" value="RU" />
                <input type="hidden" class="form-control mb-2" name="LangCode" value="EN" />

                <input class="form-control mb-2" name="SEO" />
                <input class="form-control mb-2" name="SEO" />
                <input class="form-control mb-2" name="SEO" />


                <p>Photo</p>
                <input class="form-control mb-2" type="text" name="PhotoURL" />

                <input class="form-control mb-2" type="submit" value="Create" />
            </form>
        </div>
    </div>
</div>